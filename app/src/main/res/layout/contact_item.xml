<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="3dp"
    android:layout_marginBottom="3dp">
    <View
        android:layout_width="match_parent"
        android:background="@color/divide"
        android:layout_marginLeft="-15dp"
        android:layout_marginRight="-15dp"
        android:layout_height="1dp" />
    <RelativeLayout
        android:id="@+id/ctItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <com.ahah.lz.mychat.widget.CircleImageView
            android:id="@+id/ctIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/ic_launcher"
            app:border_color="#E0E0E0"
            app:border_width="1dp"/>

        <TextView
            android:id="@+id/ctName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ctIcon"
            android:layout_toRightOf="@+id/ctIcon"
            android:layout_marginLeft="5dp"
            android:text="ct name"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/ctTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ctIcon"
            android:layout_toRightOf="@+id/ctIcon"
            android:layout_marginLeft="7dp"
            android:text="tag"
            android:textSize="15dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/divide"
        android:layout_marginLeft="-15dp"
        android:layout_marginRight="-15dp"
        android:layout_height="1dp" />

</LinearLayout>
