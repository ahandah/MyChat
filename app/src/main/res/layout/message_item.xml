<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_margin="5dp">
    <View
        android:layout_width="match_parent"
        android:background="@color/divide"
        android:layout_marginLeft="-15dp"
        android:layout_marginRight="-15dp"
        android:layout_height="1dp" />
    <RelativeLayout
        android:id="@+id/messageItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <com.ahah.lz.mychat.widget.CircleImageView
            android:id="@+id/chatRmIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/ic_launcher"
            app:border_color="#E0E0E0"
            app:border_width="1dp"/>

        <TextView
            android:id="@+id/chatRmName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/chatRmIcon"
            android:layout_toRightOf="@+id/chatRmIcon"
            android:text="chat name"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/chatMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/chatRmIcon"
            android:layout_toRightOf="@+id/chatRmIcon"
            android:layout_marginBottom="5dp"
            android:text="message"
            android:textSize="15dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/divide"
        android:layout_marginLeft="-15dp"
        android:layout_marginRight="-15dp"
        android:layout_height="6dp" />
</LinearLayout>
